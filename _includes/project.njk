---
layout: layouts/base.njk
---

<div class="project-details">
  <!-- Title -->
  <h1>{{ title }}</h1>

  <!-- Description -->
  <p class="description">{{ description }}</p>

  <!-- Project Content -->
  <div class="project-content">
    <!-- Project Information -->
    <div class="project-info">
      {% if technologies %}
        <h3>Technologies Used:</h3>
        <ul>
          {% for tech in technologies %}
            <li>{{ tech }}</li>
          {% endfor %}
        </ul>
      {% endif %}

      {% if github %}
        <p><a href="{{ github }}" target="_blank">GitHub Repository</a></p>
      {% endif %}

      {% if instructions %}
        <h3>How to Run:</h3>
        <pre><code class="language-bash">{{ instructions }}</code></pre>
      {% endif %}
    </div>

    <!-- Screenshots -->
    {% if screenshots and screenshots.length %}
      <div class="project-images">
        <h3>Highlights:</h3>
        {% for screenshot in screenshots %}
          <img src="{{ screenshot }}" alt="Screenshot of {{ title }}" class="screenshot" />
        {% endfor %}
      </div>
    {% endif %}
  </div>

  <!-- Render Additional Markdown Content -->
  <div class="markdown-content">
    {{ content | safe }}
  </div>

  <!-- Back to Home -->
  <p class="back-to-home"><a href="/">Back to Home</a></p>
</div>
