---
layout: layouts/base.njk
---

<div class="project-details">
  <h1>{{ title }}</h1>
  <p>{{ description }}</p>

  <div class="project-content">
    <div class="project-info">
      {% if technologies %}
        <h3>Technologies Used:</h3>
        <ul>
          {% for tech in technologies %}
            <li>{{ tech }}</li>
          {% endfor %}
        </ul>
      {% endif %}

      {% if github %}
        <p><a href="{{ github }}" target="_blank">GitHub Repository</a></p>
      {% endif %}

      {% if instructions %}
        <h3>How to Run:</h3>
        <pre><code class="language-bash">{{ instructions }}</code></pre>
      {% endif %}
    </div>

    {% if screenshots and screenshots.length %}
      <div class="project-images">
        <h3>Screenshots:</h3>
        {% for screenshot in screenshots %}
          <img src="{{ screenshot }}" alt="Screenshot of {{ title }}">
        {% endfor %}
      </div>
    {% endif %}
  </div>

  <!-- Important: render the rest of the Markdown body -->
  {{ content | safe }}

  <a href="/">Back to Home</a>
</div>
